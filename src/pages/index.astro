---
import Card from "@components/Card.astro";
import Header from "@components/HomeHeader.astro";
import Footer from "@components/Footer.astro";
import "@styles/default.css";

import githubLogo from "public/img/github-mark.png"
import xLogo from "public/img/logo-black.png"
import { Image } from "astro:assets";
---
<style>
	.cardsArea {
		display: grid;
		gap: 50px 100px;
		padding-top: 100px;
		padding-bottom: 100px;
		height: 600px;
	}
	.logo-container {
		display: flex;
		gap: 40px;
		justify-content: center;
	}
	.logo {
		width: 50px;
		height: 50px;
	}
	@media (min-width: 600px) {
		.cardsArea {
			grid-template-columns: repeat(2, 1fr);
			margin-left: 150px;
			margin-right: 150px;
		}
	}
	@media (max-width: 599px) {
		.cardsArea {
			grid-template-columns: 1fr;
			margin-left: 50px;
			margin-right: 50px;
		}
	}
</style>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
	</head>
	<Header/>
	<div class="cardsArea">
		<Card href="./blog", title="Blog", body="技術ブログ"/>
		<Card href="./portfolio", title="Portfolio", body="制作物・スキルなど"/>
		<Card href="./about", title="About", body="経歴など"/>
		<Card href="./others", title="Others", body="その他リンク等"/>
	</div>
	<div class="logo-container">
		<a href="https://github.com/kitashimauni" target="_blank">
			<Image src={githubLogo}, alt="GitHubのリンク", class="logo"/>
		</a>
		<a href="https://x.com/nibs_tuat" target="_blank">
			<Image src={xLogo}, alt="Xのリンク", class="logo"/>
		</a>
	</div>
	<Footer/>
</html>	